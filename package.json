{
	"name": "ngx-monaco",
	"version": "0.7.0",
	"description": "Monaco Editor for Angular",
	"license": "MIT",
	"repository": "SamVerschueren/ngx-monaco",
	"author": {
		"name": "Sam Verschueren",
		"email": "sam.verschueren@gmail.com"
	},
	"engines": {
		"node": ">=6"
	},
	"scripts": {
		"test": "npm run lint",
		"lint": "tslint -p . --format stylish",
		"build": "npm run copy:typings && ng-packagr -p package.json",
		"release": "npm run build && cd dist && npm publish && cd ..",
		"copy:typings": "cpy node_modules/monaco-editor/monaco.d.ts src/typings/monaco-editor"
	},
	"keywords": [
		"angular",
		"ng",
		"monaco",
		"editor",
		"monaco-editor",
		"vscode",
		"vs"
	],
	"peerDependencies": {
		"@angular/common": "^6.0.0",
		"@angular/core": "^6.0.0",
		"monaco-editor": "^0.12.0",
		"rxjs": "^6.0.0"
	},
	"devDependencies": {
		"@angular/common": "^6.0.0",
		"@angular/compiler": "^6.0.0",
		"@angular/compiler-cli": "^6.0.0",
		"@angular/core": "^6.0.0",
		"cpy-cli": "^1.0.1",
		"monaco-editor": "^0.12.0",
		"ng-packagr": "^2.4.2",
		"rxjs": "^6.1.0",
		"tslint": "^5.8.0",
		"tslint-xo": "^0.3.0",
		"typescript": "~2.7.2",
		"yarn": "^1.5.1"
	},
	"ngPackage": {
		"lib": {
			"entryFile": "src/index.ts"
		}
	}
}
